@model IEnumerable<Aluno>

<a class="btn btn-info" asp-action="Criar">
    Cadastrar
</a>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(m => m.Nome) @*Mostra o nome da propriedade*@
            </th>
            <th>
                @Html.DisplayNameFor(m => m.DataNascimento) @*Mostra o nome da propriedade*@
            </th>
            <th>
                @Html.DisplayNameFor(m => m.Email) @*Mostra o nome da propriedade*@
            </th>
            <th>
                @Html.DisplayNameFor(m => m.Ativo) @*Mostra o nome da propriedade*@
            </th>
            <th></th>
        </tr>
    </thead>

    <tbody>
        @{
            foreach (var aluno in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(m => aluno.Nome)
                    </td>
                    <td>
                        @Html.DisplayFor(m => aluno.DataNascimentoFormatada)
                    </td>
                    <td>
                        @Html.DisplayFor(m => aluno.Email)
                    </td>
                    <td>
                        @Html.DisplayFor(m => aluno.Ativo)
                    </td>
                    <td>
                        <a class="btn btn-info" asp-action="Detalhes" asp-route-id="@aluno.Id">
                            <i class="fa fa-search"></i>
                        </a>
                        <a class="btn btn-warning" asp-action="Editar" asp-route-id="@aluno.Id">
                            <i class="fa fa-pencil-alt"></i>
                        </a>
                        <a class="btn btn-danger" asp-action="Excluir" asp-route-id="@aluno.Id">
                            <i class="fa fa-trash"></i>
                        </a>
                    </td>
                </tr>
            }
        }
    </tbody>
</table>