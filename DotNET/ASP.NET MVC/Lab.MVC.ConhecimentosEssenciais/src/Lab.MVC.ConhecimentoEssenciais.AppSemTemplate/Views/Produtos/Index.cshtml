@foreach (var item in Model) {
        <tr>
            <td>
                <img class="w-100" src="@item.Image" style="max-width: 100px"/>
               
            </td>

            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            
            <td>
                @Html.DisplayFor(modelItem => item.Valor)
            </td>
            <td>
